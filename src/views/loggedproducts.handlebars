<h1>Welcome {{user.firstName}}</h1>
<div>
<h4>Have a look on our products, Dear {{user.lastName}}</h2>
<a id="{{user.cart}}" href="/cart/{{user.cart}}" class="userCart" >🛒</a>
</div>
<p>Remember, our communication via is <span style="color: rgb(226, 162, 43);">{{user.email}}</span></p>
<div id="bodyRT">
    <div id="products">
            <h2>Products list</h2>
            <h3>Page: {{productsData.pagination.page}}</h3>
        <div id="dynamicProducts">
                {{#each productsData.products }}
                <div id="{{this._id}}" style="display: flex; flex-direction: column; justify-content: center; align-items: center; border: solid 3px blue; width: 100%; heigth: 100%">
                    <h2>{{this.title}}</h2>
                    <img src={{this.thumbnail}} style="max-width: 100px; max-height: 200px">
                    <h3>Price: {{this.price}}</h4>
                    <p>Stock: {{this.stock}}</p>
                    <button onclick="addProductToCart('{{this._id}}')">Add To Cart🛒</button>
                </div>
                {{/each}}
        </div>
        <div class="pageController">
            <a href="/session/products?page=1">⏮</a>
            {{#if productsData.pagination.hasPrevPage}}
            <a href="/session/products?page={{productsData.pagination.prevPage}}">⏪{{productsData.pagination.prevPage}}🔹</a>
            {{/if}}
            <a >{{productsData.pagination.page}}</a>
            {{#if productsData.pagination.hasNextPage}}
            <a href="/session/products?page={{productsData.pagination.nextPage}}">🔹{{productsData.pagination.nextPage}}⏩</a>
            {{/if}}
            <a href="/session/products?page=6">⏭</a>
        </div>

    </div>
    <div>
        <a href="/session/profile">Back to profile</a>
    </div>

    <script src="/js/loggedproducts.js"></script>