<div>
<h1 id="userCart" style="padding: 2%">Cart: {{cart}}</h1>
<h4><a href="/session/profile">Back to profile</a></h4>
</div>

<div style="padding: 2%">
    <h1>Products:</h3>
    <div id="products-in-cart">
        {{#each products}}
        <div style="display: flex; flex-direction: column; justify-content: center; align-items: center; border: solid 3px blue; width: 100%; heigth: 100%"> 
            <h2>{{this.title}}</h2>
            <img src={{this.thumbnail}} style="max-width: 100px; max-height: 200px">
            <h2>Quantity: {{this.quantity}}</h2>
        {{/each}}
        </div>
    </div>
</div>

<script src="/js/cart.view.js"></script>