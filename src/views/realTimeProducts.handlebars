
<div id="bodyRT">
    <div id="products">
        <div id="dynamicProducts">
            <h1>Products list</h1>
                {{#each products}}
                <div id={{this.id}}>
                    <h2>{{this.title}}</h2>
                    <img src={{this.thumbnail}} alt="">
                    <h3>Price: {{this.price}}</h4>
                    <p>Stock: {{this.stock}}</p>
                    <button onclick="deleteProduct({{this.id}})">Delete</button>
                </div>
                {{/each}}
        </div>
    </div>
    <div id="formForNewProduct">
        <h3>Fill the form to upload a new product</h3>
        <form action="" id="form.products">
            <label for="title">
                 Enter product title:
                <input type="text" name="title" id="title" placeholder="Title">
            </label>    
            <label for="description">
                 Enter product description:
                <input type="text" name="description" id="description" placeholder="Description">
            </label>
            <label for="price">
                 Enter product price:
                <input type="number" name="price" id="price" placeholder="Price">
            </label>
            <label for="stock">
                 Enter product stock:
                <input type="number" name="stock" id="stock" placeholder="Stock">
            </label>
            <label for="code">
                 Enter product code:
                <input type="text" name="code" id="code" placeholder="Code">
            </label>
            <label for="category">
                 Select category
                <select id="category">
                    <option value="Clothes">Clothes</option>
                    <option value="Shoes">Shoes</option>
                    <option value="Bags">Bags</option>
                </select>
            </label>
            <label for="thumbnail">
                <input type="text" id="thumbnail" name="thumbnail" placeholder="URL">
            </label>
            <label for="send">
                <input type="submit" id="send" value="Send">
            </label>
        </form>
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realTimeProducts.js"></script>